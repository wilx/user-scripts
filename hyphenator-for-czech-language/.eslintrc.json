{
    "plugins": [
        "optimize-regex"
    ],
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 4],
        "operator-linebreak": ["error", "before"],
        "optimize-regex/optimize-regex": "warn"
    },
    "ignorePatterns": ["output/*.js"]
}
